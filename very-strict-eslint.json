{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "plugin:prettier-vue/recommended"
  ],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["warn", "error"]
      }
    ],
    "no-debugger": "warn",
    "no-unused-vars": [
      "warn",
      {
        "ignoreRestSiblings": true
      }
    ],
    "no-plusplus": "off",
    "no-undef": "off",
    "no-var": "error",
    "semi": ["error", "always"],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ]
  },
  "parserOptions": {
    "parser": "@babel/eslint-parser"
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/*.{j,t}s?(x)",
        "**/tests/unit/**/*.spec.{j,t}s?(x)"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
